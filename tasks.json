{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar Java",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d", "bin",
                "src/cliente/*.java",
                "src/modelo/*.java",
                "src/servidor/*.java"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Executar Cliente",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp", "bin",
                "cliente.Cliente"
            ],
            "dependsOn": "Compilar Java"
        },
        {
            "label": "Executar Servidor",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp", "bin",
                "servidor.Servidor"
            ],
            "dependsOn": "Compilar Java"
        }
    ]
}
